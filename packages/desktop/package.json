{
  "name": "@nirvana/desktop",
  "productName": "nirvana",
  "version": "1.0.0",
  "description": "Walkie Talkie for Remote Teams",
  "main": ".webpack/main",
  "scripts": {
    "dev": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "talksik",
    "email": "patel.arjun50@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/1024x1024",
        "protocols": [
          {
            "protocol": "nirvana-desktop",
            "name": "nirvana-desktop",
            "schemes": "nirvana-desktop"
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "desktop2"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "port": "4000",
            "loggerPort": "9001",
            "mainConfig": "./webpack.main.config.js",
            "devContentSecurityPolicy": "connect-src 'self' http://localhost:5000 ws://localhost:5000 'unsafe-eval'",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/electron/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "autoprefixer": "^10.4.4",
    "css-loader": "^6.0.0",
    "electron": "17.1.2",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "mini-css-extract-plugin": "^2.6.0",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.0.0",
    "tailwindcss": "^3.0.23",
    "ts-loader": "^9.2.2",
    "typescript": "~4.5.4",
    "webpack": "^5.72.0"
  },
  "dependencies": {
    "@getstation/electron-google-oauth2": "^2.1.0",
    "@mui/icons-material": "^5.6.2",
    "@nirvana/core": "*",
    "antd": "^4.19.2",
    "axios": "^0.26.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "moment": "^2.29.1",
    "mongodb": "^4.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-hotkeys": "^2.0.0",
    "react-icons": "^4.3.1",
    "react-query": "^3.34.16",
    "recoil": "^0.6.1",
    "sass": "^1.51.0",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.4.1"
  }
}
